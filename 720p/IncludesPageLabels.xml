<?xml version="1.0"?>
<includes>
	<include name="PageLabel">
		<posx>34</posx>
		<posy>20</posy>
		<width>950</width>
		<aligny>center</aligny>
		<font>pagelabel</font>
		<textcolor>Color1</textcolor>
		<include>transition_PageLabel</include>
		<animation effect="slide" end="45" condition="Container.Scrolling + Skin.HasSetting(hidescrolloffset)">Conditional</animation> <!-- als indicator aanwezig, scroll over indicator zetten -->
		<visible>!Control.IsVisible(9900) + !Control.IsVisible(531)</visible>
	</include>
	
	<include name="videoLibPageLabels">
		<!-- page titles with or without scrolloffset visible -->
		<control type="label">
			<label>$INFO[Container.FirstTitle] [COLOR=Color2]$INFO[Container.SecondTitle][/COLOR]</label>
			<include>PageLabel</include>
			<visible>!Window.IsActive(502) + ![Window.IsActive(movieinformation) | Window.IsActive(musicinformation)]</visible>
		</control>

		<!-- full info screen movies -->
		<control type="label">
			<label>$INFO[ListItem.Title]</label>
			<include>PageLabel</include>
			<visible>Window.IsActive(2003) + Container.Content(movies)</visible>
		</control>
		<!-- full info screen tv shows -->
		<control type="label">
			<description>tv shows</description>
			<label>$INFO[ListItem.TVShowTitle]</label>
			<include>PageLabel</include>
			<visible>Window.IsActive(2003) + Container.Content(tvshows)</visible>
		</control>
		<!-- full info screen episodes -->
		<control type="label">
			<description>episodes</description>
			<label>$INFO[ListItem.TVShowTitle]</label>
			<include>PageLabel</include>
			<visible>Window.IsActive(2003) + Container.Content(episodes)</visible>
		</control>
		<!-- music -->
		<!--<control type="label">
			<label>[COLOR=Color2]$INFO[Container.FirstTitle][/COLOR] $INFO[Container.SecondTitle]</label>
			<include>videoPageLabel</include>
			<visible>!Window.IsActive(502)</visible>
		</control>-->
		<!-- pictures -->
		<control type="label">
			<description>programs</description>
			<label>[UPPERCASE]$LOCALIZE[1][/UPPERCASE]</label>
			<include>PageLabel</include>
			<visible>Control.IsVisible(50) + Window.IsActive(10002)</visible>
		</control>
	</include>
	<include name="videoLibPageLabels2">
		<!-- video -->
		<control type="label">
			<label>$INFO[Container.FirstTitle] [COLOR=Color2]$INFO[Container.SecondTitle][/COLOR]</label>
			<include>PageLabel</include>
			<visible>!Window.IsActive(2003)</visible>
		</control>
		<!-- pictures -->
		<control type="label">
			<description>programs</description>
			<label>[UPPERCASE]$LOCALIZE[1][/UPPERCASE]</label>
			<include>PageLabel</include>
			<visible>Control.IsVisible(50) + Window.IsActive(10002)</visible>
		</control>
	</include>
</includes>
