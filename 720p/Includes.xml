	<!--- NAVIGATION ------>
	<include name="nav_Indicator">
		<control type="group" id="6100">
			<posx>20</posx>
			<posy>24</posy>
			<visible>!Window.IsActive(busydialog) + [Window.IsActive(programs) | Window.IsActive(musicplaylist) | Window.IsActive(videoplaylist) | Window.IsActive(addonbrowser) | Window.IsActive(videofiles) | Window.IsActive(musiclibrary) | Window.IsActive(musicfiles) | Window.IsActive(pictures) | Window.IsActive(600)] + !Control.IsVisible(9900)</visible>
			<animation effect="slide" end="0,-3" condition="true">Conditional</animation>
			<include>transition_Indicator</include>
			<control type="image">
				<width>32</width>
				<height>32</height>
				<texture>navigation/indicator_Left.png</texture>
				<visible>[Control.IsVisible(50) | Control.IsVisible(51) | Control.IsVisible(54) | Control.IsVisible(541) | Control.IsVisible(57) | Control.IsVisible(571) | Control.IsVisible(573) | Control.IsVisible(574) | Control.IsVisible(572) | Control.IsVisible(575) | Window.IsActive(600) | Control.IsVisible(555)] + ![Window.IsActive(movieinformation) | Window.IsActive(musicinformation)]</visible>
				<visible>!Control.IsVisible(52) + !Control.IsVisible(53) + !Control.IsVisible(58)</visible>
				<animation effect="rotate" center="auto" start="0" end="-180" time="250" tween="Quadratic" condition="ControlGroup(6000).HasFocus">Conditional</animation>
			</control>
			<control type="image">
				<width>32</width>
				<height>32</height>
				<texture>navigation/indicator_Up.png</texture>
				<visible>[Control.IsVisible(52) | Control.IsVisible(521) | Control.IsVisible(522) | Control.IsVisible(53) | Control.IsVisible(58)] + ![Window.IsActive(movieinformation) | Window.IsActive(musicinformation)]</visible>
				<animation effect="rotate" center="auto" start="0" end="90" time="250" tween="Quadratic" condition="Control.IsVisible(300)">Conditional</animation>
			</control>
		</control>
	</include>
