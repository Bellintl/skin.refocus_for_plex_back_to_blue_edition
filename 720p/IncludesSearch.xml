<includes>
	<!-- Search -->
	<include name="Search_Header_background">
		<posx>1</posx>
		<texture>plex-search-header.png</texture>
		<width>910</width>
	</include>
	<include name="Search_Label">
		<posy>7</posy>
		<posx>880</posx>
		<align>right</align>
		<font>MediumSmallTitleFont2</font>
		<textcolor>orange</textcolor>
		<width>278</width>
		<height>30</height>
	</include>
	<include name="Search_Label_Unfocused">
		<posy>7</posy>
		<posx>880</posx>
		<align>right</align>
		<font>MediumSmallTitleFont2</font>
		<textcolor>Unfocused</textcolor>
		<width>278</width>
		<height>30</height>
	</include>
	<include name="Search_Result">
		<posx>0</posx>
		<posy>0</posy>
		<width>880</width>
		<itemlayout width="140" height="200">
			<control type="image">
				<posx>15</posx>
				<posy>10</posy>
				<width>128</width>
				<height>140</height>
				<info>ListItem.Thumb</info>
				<aspectratio aligny="bottom">keep</aspectratio>
			</control>
			<control type="label">
				<visible>ListItem.Type(episode)</visible>
				<posx>81</posx>
				<posy>160</posy>
				<width>130</width>
				<align>center</align>
				<aligny>center</aligny>
				<scroll>false</scroll>
				<label>$INFO[ListItem.tvshowtitle]</label>
				<font>MediumSmallTitleFont</font>
				<textcolor>FF999999</textcolor>
				<wrapmultiline>false</wrapmultiline>
			</control>
			<control type="label">
				<visible>ListItem.Type(album) | ListItem.Type(track)</visible>
				<posx>81</posx>
				<posy>160</posy>
				<width>130</width>
				<align>center</align>
				<aligny>center</aligny>
				<scroll>false</scroll>
				<label>$INFO[ListItem.artist]</label>
				<font>MediumSmallTitleFont</font>
				<textcolor>FF999999</textcolor>
				<wrapmultiline>false</wrapmultiline>
			</control>
			<control type="label">
				<posx>81</posx>
				<posy>180</posy>
				<width>130</width>
				<align>center</align>
				<aligny>center</aligny>
				<scroll>false</scroll>
				<label>$INFO[ListItem.Title]</label>
				<font>MediumSmallTitleFont</font>
				<textcolor>FF999999</textcolor>
				<wrapmultiline>false</wrapmultiline>
			</control>
		</itemlayout>
		<focusedlayout width="140" height="200">
			<control type="image">
				<posx>15</posx>
				<posy>10</posy>
				<width>128</width>
				<height>140</height>
				<info>ListItem.Thumb</info>
				<aspectratio aligny="bottom">keep</aspectratio>
			</control>
			<control type="label">
				<visible>ListItem.Type(episode)</visible>
				<posx>81</posx>
				<posy>160</posy>
				<width>130</width>
				<align>center</align>
				<aligny>center</aligny>
				<scroll>false</scroll>
				<label>$INFO[ListItem.tvshowtitle]</label>
				<font>MediumSmallTitleFont</font>
				<textcolor>FFFFFFFF</textcolor>
				<wrapmultiline>false</wrapmultiline>
			</control>
			<control type="label">
				<visible>ListItem.Type(album) | ListItem.Type(track)</visible>
				<posx>81</posx>
				<posy>160</posy>
				<width>130</width>
				<align>center</align>
				<aligny>center</aligny>
				<scroll>false</scroll>
				<label>$INFO[ListItem.artist]</label>
				<font>MediumSmallTitleFont</font>
				<textcolor>FFFFFFFF</textcolor>
				<wrapmultiline>false</wrapmultiline>
			</control>
			<control type="label">
				<posx>81</posx>
				<posy>180</posy>
				<width>130</width>
				<align>center</align>
				<aligny>center</aligny>
				<scroll>false</scroll>
				<label>$INFO[ListItem.Title]</label>
				<font>MediumSmallTitleFont</font>
				<textcolor>FFFFFFFF</textcolor>
				<wrapmultiline>false</wrapmultiline>
			</control>
		</focusedlayout>
	</include>
	<include name="Search_Keyboard_Button">
		<width>45</width>
		<height>45</height>
		<font>LargeSearchFont</font>
		<textcolor>Color4</textcolor>
		<focusedcolor>Color1</focusedcolor>
		<align>center</align>
		<aligny>center</aligny>
		<texturenofocus border="20">new_dialogs/button.png</texturenofocus>
		<texturefocus border="20">new_dialogs/button-focus.png</texturefocus>
		<textureclick border="20">-</textureclick>
	</include>
	<include name="Search_Keyboard_ToggleButton">
		<width>36</width>
		<height>36</height>
		<font>LargeDefaultFont</font>
		<textcolor>HomeMain</textcolor>
		<focusedcolor>Focused</focusedcolor>
		<align>center</align>
		<aligny>center</aligny>
		<texturenofocus border="18" diffuse="grey.png">button_keyboard.png</texturenofocus>
		<texturefocus border="18" diffuse="masks/10b9f2.png">button_keyboard.png</texturefocus>
		<textureclick border="18">-</textureclick>
	</include>
	<include name="Search_Keyboard_Big_Button">
		<width>80</width>
		<height>80</height>
		<font>LargeDefaultFont</font>
		<textcolor>HomeMain</textcolor>
		<focusedcolor>Focused</focusedcolor>
		<align>center</align>
		<aligny>center</aligny>
		<texturenofocus>button_kb.png</texturenofocus>
		<texturefocus>button_kb_on.png</texturefocus>
		<textureclick>button_kb_click.png</textureclick>
	</include>
</includes>