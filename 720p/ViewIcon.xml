				<control type="image">
					<posx>96</posx>
					<posy>147</posy>
					<width>32</width>
					<height>32</height>
					<include>watchedOverlay</include>
					<visible>[Container.Content(movies) + Skin.HasSetting(overlayMovies)] | [Container.Content(tvshows) + Skin.HasSetting(overlayTVShows)]</visible>
